#cloud-config

coreos:
  etcd:
      discovery: http://172.17.8.100:4001/v2/keys/testcluster
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: node-bootstrap.service
      command: start
      runtime: no
      enable: true
      content: |
        [Unit]
        Description=Node Agent Service
        After=docker.service
        Requires=docker.service

        [Service]
        ExecStartPre=/bin/bash -c 'if [ ! -d "/var/lib/node-bootstrap" ]; then git clone https://github.com/INAETICS/node-bootstrap.git /var/lib/node-bootstrap; else cd /var/lib/node-bootstrap; git pull; fi'
        ExecStart=/bin/bash -c '/var/lib/node-bootstrap/node-bootstrap --uniqueId=%m --hostIp=$public_ipv4 --nodeRole=node-provisioning'
        TimeoutSec=300
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
